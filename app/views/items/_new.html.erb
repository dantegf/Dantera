  <%= simple_form_for Item.new, url: {action: "create", controller: "items"}, html: {class: "add_item"} do |f| %>

    <h6>Item name</h6>
      <div><%= f.text_field :name, placeholder: "ie: Leather wallet" %></div>
    <h6>Email address</h6>
    <% if current_user %>
      <div><%= f.text_field :contact, value: current_user.email %></div>
    <% else %>
      <div><%= f.text_field :contact %></div>
    <% end %>
    <h6>Default reward</h6>
      <%= f.text_field :reward, placeholder: "$ .00" %>
    <h6>Description</h6>
      <div><%= f.text_area :description, placeholder: "describe your item: color, size, function, serial #, etc..", size: "26x6" %></div>
  <!-- Uploading Photo-->
      <div><%= f.input :photo %></div>
        <%= f.input :photo_cache, as: :hidden %>
  <!-- Submit -->
      <div><%= f.submit "Create New", method: "POST" %></div>
    <% end %>
