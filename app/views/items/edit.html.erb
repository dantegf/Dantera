
<div class="container min-height">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="login-card">
        <h2 class="text-center">Change your photo</h2>
         <%= simple_form_for @item do |f| %>
         <div><%= f.input :photo, label: false %></div>
         <p class="text-center"> <%= f.input :photo_cache, as: :hidden %></p>
         <br>
         <div><%= submit_tag "Submit", method: "POST", class: "search-btn", style: "width: 100%" %></div>
         <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
